<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.trv13.map.OneToOne">
	<class name="Question" table="Question">
		<id name="questionId" column="question_id" type="int"/>
		<property name="question" column="question" type="string"/>
		<one-to-one name="answer" class="Answer" cascade="all"></one-to-one>
	</class>
</hibernate-mapping>